<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FRP客户端"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.66.0"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="状态未知"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/llTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="启动FRP"
        android:textSize="16sp"
        android:background="@color/primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnTools"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/btnTools"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="配置"
        android:textSize="14sp"
        android:background="@color/primary_light"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toEndOf="@id/button"
        app:layout_constraintEnd_toStartOf="@id/btnAbout"
        android:layout_marginEnd="8dp" />    
        
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="关于"
        android:textSize="14sp"
        android:background="@color/primary_light"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toEndOf="@id/btnTools"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/llOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/cbAutoStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="自启动"
            android:textSize="12sp"
            android:paddingVertical="8dp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/cbExcludeFromRecents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="不显示"
            android:textSize="12sp"
            android:paddingVertical="8dp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/cbAccessibilityService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="无障碍"
            android:textSize="12sp"
            android:paddingVertical="8dp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/cbUseShizuku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="激活Shizuku"
            android:textSize="12sp"
            android:paddingVertical="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/llOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBackgroundConfig"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="后台配置"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@color/secondary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btnInstallShizuku"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="安装Shizuku"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@color/secondary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/btnBatteryOptimization"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="电池优化"
            android:textSize="12sp"
            android:background="@color/secondary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDaemonButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/llButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnStartDaemon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="启动守护进程"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnStopDaemon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="停止守护进程"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@color/error"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/llDaemonButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvLogLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日志信息"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingVertical="8dp" />

        <Button
            android:id="@+id/btnCopyLog"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="复制日志"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:background="@color/secondary"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:background="#1E1E1E"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/llLogHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvLogView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待FRP启动..."
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:lineSpacingExtra="2dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
