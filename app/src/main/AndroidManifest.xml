<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 添加必要的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Android 14+ 需要特定的前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- 其他后台运行权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 存储权限，用于访问Download目录 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Android 11+ 需要声明访问所有文件的权限 -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- 比亚迪车辆相关权限 -->
    <uses-permission android:name="com.byd.ditrainer.permission.CORE" />
    <uses-permission android:name="android.permission.BYDAUTO_ENGINE_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_POWER_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_ADAS_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_VEHICLE_DATA_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_SETTING_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_NETWORK_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_NETWORK_SET" />
    <uses-permission android:name="android.permission.BYDAUTO_SYSTEM_GET" />
    <uses-permission android:name="android.permission.BYDAUTO_SYSTEM_SET" />
    <uses-permission android:name="android.permission.BYDACQUISITION_SEND_BUFFER" />
    <uses-permission android:name="android.permission.BYDACQUISITION_SEND_FILE" />
    
    <!-- 网络管理和电源优化相关权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.DUMP" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Startfrp"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31"
        tools:ignore="UnusedAttribute">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ConfigEditorActivity"
            android:exported="false"
            android:label="配置编辑器">
        </activity>
        <activity
            android:name=".FileManagerActivity"
            android:exported="false"
            android:label="文件管理">
        </activity>
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="关于">
        </activity>

        <!-- FRP后台服务 -->
        <service
            android:name=".FrpcService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- 开机自启动广播接收器 -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.REBOOT" />
            </intent-filter>
        </receiver>

        <!-- 车辆熄火检测广播接收器 -->
        <receiver
            android:name=".EngineOffReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <!-- 系统关机广播 -->
                <action android:name="android.intent.action.SHUTDOWN" />
                <!-- 系统重启广播 -->
                <action android:name="android.intent.action.REBOOT" />
                <!-- 系统重启广播（另一种形式） -->
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <!-- 电源连接状态变化广播 -->
                <action android:name="android.intent.action.POWER_DISCONNECTED" />
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED" />
                <!-- 电池状态变化广播 -->
                <action android:name="android.intent.action.BATTERY_CHANGED" />
                <!-- 电池电量低广播 -->
                <action android:name="android.intent.action.BATTERY_LOW" />
                <!-- 比亚迪车机可能的自定义广播 -->
                <action android:name="com.byd.action.ENGINE_OFF" />
                <action android:name="com.byd.action.POWER_MODE_CHANGE" />
                <action android:name="com.byd.action.VEHICLE_STATUS_CHANGE" />
                <action android:name="com.byd.action.IGNITION_OFF" />
                <!-- 比亚迪其他可能的自定义广播 -->
                <action android:name="com.byd.car.action.ENGINE_OFF" />
                <action android:name="com.byd.car.action.POWER_OFF" />
                <action android:name="com.byd.car.action.IGNITION_OFF" />
                <action android:name="com.byd.adas.action.ENGINE_OFF" />
                <!-- 其他可能的车机自定义广播 -->
                <action android:name="com.custom.action.ENGINE_OFF" />
                <action android:name="com.custom.action.POWER_OFF" />
                <action android:name="com.custom.action.IGNITION_OFF" />
                <action android:name="com.custom.action.KEY_OFF" />
                <!-- 通用车辆熄火广播 -->
                <action android:name="com.android.car.action.ENGINE_OFF" />
                <action android:name="com.android.car.action.POWER_OFF" />
                
                <!-- 比亚迪待机模式相关广播 -->
                <action android:name="com.byd.action.STANDBY_MODE" />
                <action android:name="com.byd.action.SLEEP_MODE" />
                <action android:name="com.byd.action.LOW_POWER_MODE" />
                <action android:name="com.byd.car.action.STANDBY" />
                <action android:name="com.byd.car.action.SLEEP" />
                <action android:name="com.byd.car.action.LOW_POWER" />
                
                <!-- 其他车机待机模式相关广播 -->
                <action android:name="com.custom.action.STANDBY" />
                <action android:name="com.custom.action.SLEEP" />
                <action android:name="com.custom.action.LOW_POWER" />
                
                <!-- Android Car待机模式广播 -->
                <action android:name="com.android.car.action.STANDBY" />
                <action android:name="com.android.car.action.SLEEP" />
                
                <!-- 系统待机相关广播 -->
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.intent.action.DEVICE_IDLE_MODE_CHANGED" />
                <action android:name="android.intent.action.LOW_MEMORY" />
                <action android:name="android.intent.action.DEVICE_STORAGE_LOW" />
                <!-- 应用状态变化相关广播 -->
                <action android:name="android.intent.action.ACTION_CLOSE_SYSTEM_DIALOGS" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <data android:scheme="package" />
                <!-- 任务相关广播 -->
                <action android:name="android.intent.action.TASK_REMOVED" />
                <action android:name="android.intent.action.RECENT_APPS_CLEARED" />
                <!-- 进程状态相关广播 -->
                <action android:name="android.intent.action.PROCESS_KILL" />
            </intent-filter>
        </receiver>

        <!-- 前台保活服务 -->
        <service
            android:name=".StatusService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Display FRP Client running status" />
        </service>
        
        <!-- FRP独立守护进程服务 -->
        <service
            android:name=".FrpcDaemonService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- 无障碍保活服务 -->
        <service
            android:name=".AccessibilityKeepAliveService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Shizuku需要的Provider配置 -->
        <provider
            android:name="rikka.shizuku.ShizukuProvider"
            android:authorities="pub.log.startfrp.shizuku"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="false"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />

    </application>

</manifest>
